{% for type, messages in app.flashes(['success', 'error', 'info', 'danger']) %}
    {% for message in messages %}
        <div role="alert" class="alert alert-{{ type }} text-center">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{% if error is defined and error is not null %}
    <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}