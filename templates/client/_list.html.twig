{% for client in list %}
    <div class="row btn-outline-primary p-2 rounded-3">
        <div class="col-md-7">
                <div class="col-md-4">
                    {{ client.firstname ~ ' ' ~ client.lastname}}<br/>
                    {{ client.birthDate|date("d/m/Y") }}
                </div>
                <div class="col-md-4">
                    {{ client.telNumber }}
                </div>
                <div class="col-md-5">
                    {{ client.codePostal }}<br/>
                    {{ client.ville }}
                </div>
        </div>
        <div class="col-md-5">
                <button class="btn btn-secondary">
                    Contacter par mail
                </button>
        </div>
    </div>
{% endfor %}